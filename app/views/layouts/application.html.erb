<!DOCTYPE html>
<html>
  <head>
    <title>AlbumsLibrary</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <% if user_signed_in? %>
      <button><%= link_to "All Albums", albums_path %></button>
      <button><%= link_to "New Album", new_album_path %></button>
      <button><%= link_to "View Profile", user_path(current_user) %></button>
      <button><%= link_to "Log Out", destroy_user_session_path, method: :delete %></button>
      <% else %>
      <button> <%= link_to "Log in", new_user_session_path %></button>
      <button> <%= link_to "Sign Up", new_user_registration_path %></button>
      <% end %>
    </nav>

    <% if user_signed_in? %>
      <p>
        You are logged in as: 
        <%= current_user.email %>
      </p>
    <% end %>

 
<p class="notice"><%= notice %></p>  
<p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
