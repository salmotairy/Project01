<h2>
<%= @album.name%>
</h2>

<p>
    <%= cl_image_tag @album.image %>
</p>

<p>
Location: <%= @album.location%>
</p>

 <div class="controls">
  <%= link_to "Edit Album", edit_album_path(@album) %>
  <%= link_to "Delete Album", album_path(@album), method: :delete %>

</div>

<%= render partial: 'photos/form' %>

<h2>All Photos in this Album</h2>

<% @album.photos.each do |photo| %>
  <div class="photo">
<%= cl_image_tag photo.image %>
  </div>
<% end %>
